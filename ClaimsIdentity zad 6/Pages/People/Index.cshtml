@page
@model ClaimsIdentity_zad_6.Pages.People.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New @ViewData["email"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].LastName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Person[0].email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model.Person) {
    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
                @if (ViewData["email"].ToString() == item.email)
                {
                    <td>

                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>}
        </tr>
}
    </tbody>
</table>
